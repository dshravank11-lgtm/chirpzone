rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* =========================
       USERS
       ========================= */
    match /users/{userId} {
      allow get, list: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && (
        request.auth.uid == userId ||
        (request.resource.data.friendRequests is list && request.resource.data.friends == resource.data.friends) ||
        (request.resource.data.friends is list && request.resource.data.friendRequests == resource.data.friendRequests) ||
        (request.resource.data.followers is list && request.resource.data.following == resource.data.following) ||
        (request.resource.data.following is list && request.resource.data.followers == resource.data.followers)
      );
    }

    /* =========================
       POSTS
       ========================= */
    match /posts/{postId} {
      allow get, list: if true;
      allow create: if request.auth != null || request.resource.data.isAnonymous == true;
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    /* =========================
       REPORTS
       ========================= */
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow update, delete: if false;
    }

    /* =========================
       COMMENTS
       ========================= */
    match /comments/{commentId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.authorId == request.auth.uid;
    }

    /* =========================
       CHATS
       ========================= */
    match /chats/{chatId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      allow create: if request.auth != null && 
                      request.auth.uid in request.resource.data.members &&
                      (
                        // For direct chats: must be one of the two members
                        (!request.resource.data.isGroup && request.resource.data.members.size() == 2) ||
                        // For group chats: must be the creator
                        (request.resource.data.isGroup && request.auth.uid == request.resource.data.createdBy)
                      );
      allow update: if request.auth != null && 
                      (request.auth.uid in resource.data.members || 
                       request.auth.uid == resource.data.createdBy);
      allow delete: if false;

      match /messages/{messageId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
      }
    }

    /* =========================
       COMMUNITIES
       ========================= */
    match /communities/{community}/{document=**} {
      allow read, create, update: if request.auth != null;
      allow delete: if false;
    }

    /* =========================
       DUMMY (for ID generation)
       ========================= */
    match /dummy/{docId} {
      allow create: if true;
    }
  }
}